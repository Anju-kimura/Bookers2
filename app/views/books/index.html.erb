<%= render 'book', user: @user, book: @book %>
<h1>Books</h1>

<div class="col-md-8 offset-md-1">
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book) do %>
            <%= image_tag book.user.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td>
          <span><%= link_to book.title, book_path(book) %></span>
        </td>
        <td>
          <span><%= book.body %></span>
        <td>
      </tr>
     <% end %>
  </tbody>
</table>
