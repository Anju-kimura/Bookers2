<%= flash[:notice] %>

<%= render 'books/book', user: @user, book: @book %>
<h1>Books</h1>

<div class="col-md-8 offset-md-1">
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user) do %>
              <%= image_tag book.user.get_profile_image(50,50) %>
            <% end %>
          </td>
          <td>
            <%= link_to book.title, book_path(book) %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
            
