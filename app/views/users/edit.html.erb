<% if @user.errors.any? %>
  <div class="mb-3">
    <%= @user.errors.count %> error prohibited this obj from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>User info</h1>

<div class="p-4">
  <%= form_with model: @user, local: true, html: { multipart: true } do |f| %>
    <div class="mb-3">
      <%= f.label :name, "Name", class: "form-label", for: "inputName" %>
      <%= f.text_field :name, class: "form-control", autofocus: true, id: "inputName", placeholder: "名前" %>
    </div>

    <div class="mb-3">
      <%= f.label :profile_image, "Profile Image", class: "form-label", for: "inputImage" %>
      <%= f.file_field :profile_image, id: "inputImage", accept: "image/*" %>
    </div>

    <div class="mb-3">
      <%= f.label :introduction, "Introduction", class: "form-label", for: "inputIntroduction" %>
      <%= f.text_field :introduction, class: "form-control", id: "inputIntroduction", placeholder: "自己紹介" %>
    </div>

    <div class="mt-3 text-center">
      <%= f.submit "Update User", class: "btn btn-success btn-lg w-50" %>
    </div>
  <% end %>
</div>
